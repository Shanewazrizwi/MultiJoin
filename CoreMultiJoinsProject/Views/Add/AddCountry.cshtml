@model CoreMultiJoinsProject.Models.Countries
@{
    ViewData["Title"] = "AddCountry";
}

<h1>AddCountry</h1>

<div class="row">
    <div class="col-sm-6">
        <form method="post" asp-controller="Add" asp-action="AddCountry">
            <div class="form-group">
                <label asp-for="CountryName"></label>
                <input asp-for="CountryName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CountryCode"></label>
                <input asp-for="CountryCode" class="form-control" />
            </div>
            
            <div>

                <input type="submit" class="btn btn-secondary btn-block" />
            </div>
        </form>
    </div>
</div>